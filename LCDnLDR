/* LCD Pins
 * RS: Pin 22
 * EN: Pin 23
 * D4: Pin 24
 * D5: Pin 25
 * D6: Pin 26
 * D7: Pin 27
 */
 
#include <LiquidCrystal.h>

LiquidCrystal lcd(22,23,24,25,26,27);
int bright = 65;

 // LDR Setup
 int LDR1_Pin = A0; //LDR North
 int LDR2_Pin = A1; //LDR South
 int LDR3_Pin = A2;
 int LDR4_Pin = A3;
 int LDR5_Pin = A4;

void setup() {

  // Setup Serial connection
  Serial.begin(9600);
  
  // Setup LCD
  lcd.begin(16,2);
  lcd.print("LDR Sensors");
  
}

void loop() {
  
  // Read LDR Values
  int LDR1 = analogRead(LDR1_Pin); 
  int LDR2 = analogRead(LDR2_Pin);
  int LDR3 = analogRead(LDR3_Pin);
  int LDR4 = analogRead(LDR4_Pin);
  int LDR5 = analogRead(LDR5_Pin);
 
  // Display values on LCD   
  lcd.setCursor(0,1);  
  lcd.print(LDR1);
  lcd.setCursor(4,1);
  lcd.print(LDR2);
  lcd.setCursor(8,1);
  lcd.print(LDR3);
  lcd.setCursor(12,1);
  lcd.print(LDR4);

  // Serial output of values  
  Serial.println(LDR1);
  Serial.println(LDR2);
  Serial.println(LDR3);
  Serial.println(LDR4);
  Serial.println(LDR5);  
  delay(250);  
}
